<p id="notice"><%= notice %></p>

<h1>Appointments</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Physician</th>
      <th>Patient</th>
      <th>Appointment date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.physician.name %></td>
        <td><%= appointment.patient.name %></td>
        <td><%= appointment.appointment_date %></td>
        <td><%= link_to 'Show', appointment, class: "btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_appointment_path(appointment), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Appointment', new_appointment_path, class: "btn btn-primary" %>
